doctype html
html
  head
    title Editar Publicación
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/style.css") 
  body
    .containerr
      if error_msg
        p.error= error_msg
      if success_msg
        p.success= success_msg
      h1 Editar Publicación
      form(action=`/posts/${post._id}/edit` method="POST" class="form-public")
        .form-group
          label(for="title" ) Título
          input(type="text" name="title" value=post.title required)
        .form-group
          label(for="content" id="title-edit-post") Contenido
          textarea(name="content" required id="content-edit-post")= post.content
        button.button(type="submit") Actualizar
      a.button(href="/posts/all-post") Volver a todas las publicaciones